[Unit]
Description=ActivitySage FastAPI backend
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/activitysage-backend
Environment=OLLAMA_HOST=http://13.40.91.168:11434
Environment=CORS_ORIGINS=http://localhost:5173,http://localhost:5174
EnvironmentFile=/home/ubuntu/activitysage-backend/.env
ExecStart=/home/ubuntu/activitysage-backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
KillSignal=SIGINT
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target
